---
import "@fontsource-variable/inter";
import "./global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const pageTitle = title
  ? `Calendari.\u2000${/[\.?!]$/.test(title) ? title : title + "."}`
  : "Calendari.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Calendari is an API intended to synchronize calendars from various sources. Upload events using a simple HTTP API, and consume them as iCal links."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  main {
    margin: auto;
    padding: 1rem 0 10vh;
    width: 47rem;
    --article-inset: 4rem;
    max-width: calc(100% - 1rem);
    color: white;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    box-sizing: border-box;
  }
  @media (max-width: 580px) {
    main {
      --article-inset: 2rem;
    }
  }
  @media (max-width: 450px) {
    main {
      --article-inset: 1rem;
    }
  }
  @media (max-width: 256px) {
    main {
      --article-inset: 8px;
    }
  }

  :global(:where(main > *:not(svg, img))),
  :global(:where(main > astro-island > *:not(svg, img))) {
    margin-left: var(--article-inset);
    margin-right: var(--article-inset);
  }
</style>
