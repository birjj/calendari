---
import { Icon } from "astro-icon/components";
import RootLayout from "./RootLayout.astro";
import PageHeader from "@components/PageHeader.astro";

export interface Props {
  header?: string;
  message?: string;
  returnUrl?: string;
  returnText?: string;
  status?: number;
  response?: Response;
}

const { returnUrl, returnText, ...props } = Astro.props;
const status = props.response?.status ?? props.status ?? 0;
const header =
  props.header ??
  props.response?.friendlyTitle ??
  props.response?.statusText ??
  "An error occurred";
const message =
  props.message ??
  props.response?.friendlyDescription ??
  "An error occurred. Please try again.";
---

<RootLayout title={`${status ? status + ": " : ""}${header}`}>
  <PageHeader>{status && <emph>{status}: </emph>}{header}</PageHeader>
  <div class="message">
    <p>{message}</p>
    {
      returnUrl && (
        <div class="return">
          <a href={returnUrl}>
            <Icon name="mdi:chevron-left" size={32} />
            {returnText ?? "Go back"}
          </a>
        </div>
      )
    }
  </div>
  <div class="filler"></div>
</RootLayout>

<style>
  .message {
    margin: auto auto;
    text-align: center;
    font-weight: 500;
  }
  .return {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px oklch(100% 0.014 267.05 / 20%);
    width: fit-content;
    margin-inline: auto;
  }
  .return:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .return > a {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px) calc(2rem - 1px) calc(1rem - 1px)
      calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: oklch(27% 0.015 267 / 80%);
  }
  .return > a > svg:first-child {
    margin-right: 0.5ch;
  }
  .filler {
    flex-shrink: 999;
    font-size: 4rem;
    flex-grow: 1;
    max-height: 8rem;
    max-height: calc(
      4rem + 4rem + 0.67em
    ); /* intended to emulate the height of the <h1> at the top of the page */
  }
</style>
