---
import { Icon } from "astro-icon/components";
import RootLayout from "./RootLayout.astro";

export interface Props {
  header?: string;
  message?: string;
  returnUrl?: string;
  returnText?: string;
  status?: number;
  response?: Response;
}

const { returnUrl, returnText, ...props } = Astro.props;
const status = props.response?.status ?? props.status ?? 0;
const header =
  props.header ??
  props.response?.friendlyTitle ??
  props.response?.statusText ??
  "An error occurred";
const message =
  props.message ??
  props.response?.friendlyDescription ??
  "An error occurred. Please try again.";
---

<RootLayout title={`${status ? status + ": " : ""}${header}`}>
  <main>
    <Icon
      name="calendari-gradient"
      class="logo"
      width={495}
      height={623}
      color="black"
      aria-hidden="true"
    />
    <h1>{status && <emph>{status}: </emph>}{header}</h1>
    <div class="message">
      <p>{message}</p>
      {
        returnUrl && (
          <div class="return">
            <a href={returnUrl}>
              <Icon name="mdi:chevron-left" size={32} />
              {returnText ?? "Go back"}
            </a>
          </div>
        )
      }
    </div>
    <div class="filler"></div>
  </main>
</RootLayout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 700px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    box-sizing: border-box;
  }
  .logo {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 4rem;
  }
  emph {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300%;
    background-position: 0%;
  }
  h1 emph {
    background-size: 100%;
  }
  .message {
    margin: auto auto;
    text-align: center;
    font-weight: 500;
  }
  .return {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px oklch(100% 0.014 267.05 / 20%);
    width: fit-content;
    margin-inline: auto;
  }
  .return:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .return > a {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px) calc(2rem - 1px) calc(1rem - 1px)
      calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: oklch(27% 0.015 267 / 80%);
  }
  .return > a > svg:first-child {
    margin-right: 0.5ch;
  }
  .filler {
    flex-shrink: 999;
    font-size: 4rem;
    flex-grow: 1;
    max-height: 8rem;
    max-height: calc(
      4rem + 4rem + 0.67em
    ); /* intended to emulate the height of the <h1> at the top of the page */
  }
</style>
